                    <div class="w-100 p-2">
                        <input type="text" class="form-control" placeholder="Enter email address" aria-label="Username"
                            aria-describedby="basic-addon1">
                    </div>
                    <div class="w-100 p-2">
                        <input type="text" class="form-control" placeholder="Enter subject" aria-label="Username"
                            aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="second">
                <div class="p-2">
                    <textarea class="form-control" aria-label="Username" aria-describedby="basic-addon1"
